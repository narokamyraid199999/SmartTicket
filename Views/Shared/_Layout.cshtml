<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SmartTicket</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SmartTicket.styles.css" asp-append-version="true" />
    <link rel="icon" href="https://cdn-icons-png.freepik.com/512/6030/6030249.png" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3 px-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">SmartTicket</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <!-- Example single danger button -->
                        <div class="dropdown">
                            <button class="btn  dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-text-left"></i>
                                Dashboard
                            </button>
                            <ul class="dropdown-menu">
                                @if (User.Identity.IsAuthenticated)
                                {
                                    <li class="nav-item">
                                        <a class="nav-link dropdown-item text-dark" asp-area="" asp-controller="Cart" asp-action="Index">Cart</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link dropdown-item text-dark" asp-area="" asp-controller="Order" asp-action="Index">Orders</a>
                                    </li>
                                }

                                <li class="nav-item">
                                    <a class="nav-link dropdown-item text-dark" asp-area="" asp-controller="Movies" asp-action="Index">Movies</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link dropdown-item text-dark" asp-area="" asp-controller="Actor" asp-action="Index">Actor</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link dropdown-item text-dark" asp-area="" asp-controller="Category" asp-action="Index">Category</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link dropdown-item text-dark" asp-area="" asp-controller="movieActor" asp-action="Index">movieActor</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link dropdown-item text-dark" asp-area="" asp-controller="Role" asp-action="Add">Role</a>
                                </li>
                            </ul>
                        </div>


                    </ul>
                </div>
            </div>


            <div class="d-flex ">
                @if (!User.Identity.IsAuthenticated)
                {
                    <div>
                        <a asp-area="" asp-controller="Account" asp-action="Login">
                            <button class="btn btn-outline-secondary">Login</button>
                        </a>
                    </div>

                    <div>
                        <a class="mx-3" asp-area="" asp-controller="Account" asp-action="Regester">
                            <button class="btn btn-outline-primary">Regester</button>
                        </a>
                    </div>
                }


                @if (User.Identity.IsAuthenticated)
                {
                    <a  class="mx-3" asp-area="" asp-controller="Account" asp-action="SignOut">
                        <button class="btn btn-outline-danger">SignOut</button>
                    </a>
                }


                
            </div>

            <div>
                <form method="get" asp-controller="Search" asp-action="Index">
                    <div class="d-flex gap-3">
                        <input name="name" id="name" placeholder="Search for movies ..." class="form-control" />
                        <button class="btn btn-outline-secondary">Search</button>

                    </div>


                </form>


            </div>
        </nav>
    </header>
    <div class="container my-5">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - SmartTicket - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
