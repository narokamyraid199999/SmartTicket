@model RoleDTO


<div class="my-5">
	<form method="post" asp-controller="Role" asp-action="Add">
		<h2 class="my-4">New Role</h2>


		<div class="my-3">
			<label class="mb-1" asp-for="Name"></label>
			<input asp-for="Name" class="form-control" />
			<span asp-validation-for="Name" class="text-danger"></span>
		</div>


		<div class="my-4">
			<button class="btn btn-primary" type="submit">Save</button>
			<a class="btn btn-info mx-2" asp-controller="Home" asp-action="Index">Back</a>
		</div>

	</form>
</div>


@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}