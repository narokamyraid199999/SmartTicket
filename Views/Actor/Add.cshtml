@model Actor


<div class="my-5">
	<form method="post" asp-controller="Actor" asp-action="Add">
		<h2 class="my-4">New Actor</h2>
		<div class="my-3">
			<label class="mb-1" asp-for="FirstName"></label>
			<input asp-for="FirstName" class="form-control" />
			<span asp-validation-for="FirstName" class="text-danger"></span>
		</div>

		<div class="my-3">
			<label class="mb-1" asp-for="LastName"></label>
			<input asp-for="LastName" class="form-control" />
			<span asp-validation-for="LastName" class="text-danger"></span>
		</div>

		<div class="my-3">
			<label class="mb-1" asp-for="Description"></label>
			<input asp-for="Description" class="form-control" />
			<span asp-validation-for="Description" class="text-danger"></span>
		</div>

		<div class="my-3">
			<label class="mb-1" asp-for="Image"></label>
			<input asp-for="Image" class="form-control" />
			<span asp-validation-for="Image" class="text-danger"></span>
		</div>

		<div class="my-4">
			<button class="btn btn-primary" type="submit">Save</button>
			<a class="btn btn-info mx-2" asp-controller="Actor" asp-action="Index">Back</a>
		</div>

	</form>
</div>


@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}