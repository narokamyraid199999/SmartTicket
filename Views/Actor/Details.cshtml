@model Actor

<div class="card">
    <div class="card-body">
        <img style="width:80px;height:80px" class="rounded-circle" src="@Model.Image" />

        <div class="mt-3">
            <h3>@Model.FirstName @Model.LastName</h3>
            <p style="font-size:1.2rem;">Bio: @Model.Description</p>

            <a href="#">Social Media</a>
        </div>

    </div>
</div>