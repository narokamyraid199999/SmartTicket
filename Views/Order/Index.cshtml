@model List<Order>


@if (TempData["msg"] != null)
{
	<h3 class="text-info">@TempData["msg"]</h3>
}

@{
	double total = 0;
}


@if (Model.Count == 0)
{
	<h2 class="text-center text-danger">Your don't have any order yet!</h2>
	<div class="d-flex justify-content-center">
		<button class="btn btn-outline-info">Order now</button>
	</div>
}
else
{
	<h2 class="my-3 ">My Orders</h2>

	<div>
		<table class="table  table-hover">
			<thead>
				<tr>
					<td>Order</td>
				</tr>
			</thead>
			<tbody>
				@foreach (var elm in Model)
				{
					<tr>
						
						<td class="p-2">
							<a asp-controller="Order" asp-action="Details" asp-route-id="@elm.Id"><h5>Order # @elm.Id</h5></a>
						</td>
					</tr>
				}

			</tbody>

		</table>
		<div class="my-4">
			<div class="d-flex justify-content-end ">

				<div >
					<a asp-controller="Home" asp-action="Index" class="btn btn-outline-success">New order</a>
				</div>

			</div>
		</div>
	</div>
}

